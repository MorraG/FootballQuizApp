<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonDesign">
        <item name="android:layout_width">match_parent</item>

        <item name="android:layout_marginTop">@dimen/paddingOrMar_S</item>
        <item name="android:layout_marginLeft">@dimen/paddingOrMar_M</item>
        <item name="android:layout_marginRight">@dimen/paddingOrMar_M</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:fontFamily">@font/advent_pro_light</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/textSize_XS</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">@dimen/paddingOrMar_M</item>
        <item name="android:layout_marginRight">@dimen/paddingOrMar_M</item>
        <item name="android:fontFamily">@font/advent_pro_light</item>
        <item name="android:textSize">@dimen/textSize_XS</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="radioButton">
        <item name="android:layout_marginTop">@dimen/paddingOrMar_S</item>
        <item name="android:buttonTint">#4CAF50</item>
        <item name="android:fontFamily">@font/advent_pro_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/paddingOrMar_XL</item>
    </style>
    <style name="footballquiz_header_style">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="questionStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/textSize_XS</item>
        <item name="android:fontFamily">@font/advent_pro_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/paddingOrMar_XL</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>
